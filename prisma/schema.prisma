generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ProductType {
  MENUPROMO
  PIZZAS
  ENTREE
  SAUCES
  DESSERTS
  BOISSONS
  AUTRES
}

model Product {
  id          Int         @id @default(autoincrement())
  createdAt   DateTime    @default(now())
  updatedAd   DateTime    @updatedAt
  name        String      @unique
  description String
  price       Float
  vegetarian  Boolean
  productType ProductType
  image       String
}
